
[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=root
Group=nginx
WorkingDirectory=/home/root/portfolio-project
ExecStart=/home/root/portfolio-project/myvenv/bin/gunicorn --workers 3 --bind unix:/home/root/portfolio-project/portfolio.sock portfolio.wsgi:application

[Install]
WantedBy=multi-user.target
